%p.lead.text-white-70
  Hello,
  =current_game.name
  !
  Try to guess 4-digit number, that consists of numbers in a range from 1 to 6.
%hr.mb-4/
.row
  .col.button
    %button.btn.btn-primary{disabled: "disabled", type: "button"}
      Level:
      %span.badge.badge-light
        =level
  .col.text-center.button
    %button.btn.btn-primary{disabled: "disabled", type: "button"}
      Attempts:
      %span.badge.badge-light
        =current_game.attempts_left
        from
        =current_game.attempts_total
  .col.button
    %button.btn.btn-primary.float-right{type: "button"}
      Hints:
      %span.badge.badge-light
        =current_game.have_hints
        from
        =current_game.hints_total
%hr.mb-4/
%form{action: "/game", method: "post"}
  .form-group
    %input.form-control.guess_input{autocomplete: "off", name: "number", pattern: "^[1-6]{4}$", placeholder: "#{current_guess}", required: ""}/
  .form-group.guess_markers_list
    #guess_marker
      -markers_answer.each do |mark|
        -if mark == '+'
          %button.btn.btn-success.marks{disabled: "disabled", type: "button"}
            =mark
        -elsif mark == '-'
          %button.btn.btn-primary.marks{disabled: "disabled", type: "button"}
            =mark
        -else
          %button.btn.btn-danger.marks{disabled: "disabled", type: "button"} x
  %hr.mb-4/
  %button.btn.btn-primary.btn-lg{type: "submit"}
    Submit
  %a.btn.btn-warning.btn-lg.float-right{:href => "/show_hint", role: "button"}
    Show hint!
    -show_hints.each do |hint|
      %span.badge.badge-light
        =hint
