
%p.lead.text-white-70 Top of Players:
%hr.mb-4/
.table-responsive-md.scores
  %table.table.table-striped.table.table-sm
    %thead
      %tr
        %th{scope: "col"} #
        %th{scope: "col"} Name
        %th{scope: "col"} Level
        %th{scope: "col"} Attempts Left
        %th{scope: "col"} Hints Left
        %th{scope: "col"} Date
    %tbody
      -data_base.each_with_index do |record, index|
        %tr
          %th{scope: "row"} #{index + 1}
          %td #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:name]]}
          %td #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:level]]}
          %td #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:attempts_left]]} / #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:attempts_total]]}
          %td #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:have_left]]} / #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:hints_total]]}
          %td #{record[Codebreaker::Statistics::COLUMN_NUMBERS[:date]].strftime("%d/%m/%Y %I:%M %p")}
%hr.mb-4/
%a.btn.btn-primary.btn-lg{href: "/", role: "button"}
  =I18n.t(:'back')
