.row
  .col.button
    %button.btn.btn-primary{disabled: "disabled", type: "button"}
      Level:
      %span.badge.badge-light
        =level
    %button.btn.btn-primary{disabled: "disabled", type: "button"}
      Attempts Left:
      %span.badge.badge-light
        =current_game.attempts_left
        from
        =current_game.attempts_total
    %button.btn.btn-primary{disabled: "disabled", type: "button"}
      Hints Left:
      %span.badge.badge-light
        =current_game.have_hints
        from
        =current_game.hints_total
%hr.mb-4/
.row
  .text-center
    .text-center
      %h3.text-white
        Oops, NAME! You lose the game!
      %h4.text-white
        The code was
        %strong 1553
        - clear_session
    %img.img-fluid{alt: "You lose the game!", src: "assets/images/lost.gif"}/
%hr.mb-4/
%a.btn.btn-primary.btn-lg{href: "/", role: "button"}
  Play again!
%a.btn.btn-success.btn-lg.float-right{href: "#", role: "button"}
  Statistics
